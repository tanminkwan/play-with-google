# OpenAI API Key (for GPT-4o, TTS, DALL-E)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Key (Alternative News Search)
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Project Credentials (for YouTube Upload)
# Create at: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Google Custom Search API (for real-time news collection)
# Create API Key: https://console.cloud.google.com/apis/credentials
# Create Search Engine (CX): https://programmablesearchengine.google.com/
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_cx_id_here

# Gmail SMTP Settings (Notification)
# GMAIL_APP_PASSWORD should be an App Password, not your regular password.
# Create at: https://myaccount.google.com/apppasswords
GMAIL_USER=your_gmail_address@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password
